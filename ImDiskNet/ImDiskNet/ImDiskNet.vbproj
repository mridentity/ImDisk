<?xml version="1.0" encoding="utf-8"?>

<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
  
    <RootNamespace>LTR.IO</RootNamespace>
    <Title>ImDiskNet</Title>
    <Description>ImDisk Low Level API Library</Description>

    <AssemblyOriginatorKeyFile>ImDiskNet.snk</AssemblyOriginatorKeyFile>
    <DelaySign>false</DelaySign>

    <TargetFrameworks>net48;netstandard2.0</TargetFrameworks>

    <RegisterForComInterop Condition="'$(TargetFramework)|$(Configuration)' == 'net40|Release'">true</RegisterForComInterop>

    <GeneratePackageOnBuild Condition="'$(Configuration)' == 'Release'">true</GeneratePackageOnBuild>

  </PropertyGroup>

</Project>
